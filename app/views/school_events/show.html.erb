<div class="container mx-auto px-4 py-8" data-controller="speech">
  <div class="max-w-2xl mx-auto">
    <div class="bg-white rounded-lg shadow-md p-6">
      <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold"><%= @school_event.title %></h1>
        <div class="flex space-x-2">
          <button data-action="click->speech#speak" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
            音声で聞く
          </button>
          <button data-action="click->speech#stop" class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded">
            停止
          </button>
          <%= link_to '編集', edit_school_event_path(@school_event), class: 'bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded' %>
          <%= link_to '戻る', school_events_path, class: 'bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded' %>
        </div>
      </div>

      <div class="space-y-4" data-speech-target="text">
        <div>
          <h2 class="text-xl font-semibold mb-2">詳細情報</h2>
          <p class="text-gray-600"><%= @school_event.description %></p>
        </div>

        <div>
          <h2 class="text-xl font-semibold mb-2">日時</h2>
          <div class="text-gray-600">
            <p>開始: <%= @school_event.start_date.strftime('%Y年%m月%d日 %H:%M') %></p>
            <p>終了: <%= @school_event.end_date.strftime('%Y年%m月%d日 %H:%M') %></p>
            <p>期間: <%= @school_event.duration %>日間</p>
          </div>
        </div>

        <div>
          <h2 class="text-xl font-semibold mb-2">場所</h2>
          <p class="text-gray-600"><%= @school_event.location %></p>
        </div>

        <div>
          <h2 class="text-xl font-semibold mb-2">種別</h2>
          <p class="text-gray-600"><%= @school_event.event_type %></p>
        </div>

        <div class="mt-6">
          <%= link_to '削除', @school_event, method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'text-red-500 hover:text-red-700' %>
        </div>
      </div>
    </div>
  </div>
</div>
